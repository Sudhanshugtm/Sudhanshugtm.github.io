/* Refined landing layout */

:root {
  --bg: #f4f5f7;
  --surface: #ffffff;
  --text: #1d232a;
  --muted: #5f6b76;
  --hairline: #e2e6eb;
  --accent: #1d232a;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 100%;
  scroll-behavior: smooth;
}

body {
  font-family: "Charter", ui-serif, Georgia, "Times New Roman", serif;
  color: var(--text);
  background: var(--bg);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

a {
  color: inherit;
}

h1, h2, h3 {
  font-family: "Inter", -apple-system, BlinkMacSystemFont, sans-serif;
  letter-spacing: -0.01em;
}

p {
  color: var(--muted);
  max-width: 65ch;
}

/* Header */
.site-header {
  position: sticky;
  top: 0;
  background: rgba(244, 245, 247, 0.9);
  backdrop-filter: blur(6px);
  border-bottom: 1px solid var(--hairline);
  z-index: 10;
}

.header-inner {
  max-width: 1040px;
  margin: 0 auto;
  padding: 0.75rem 1.25rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.brand {
  color: var(--text);
  text-decoration: none;
  font-weight: 600;
  letter-spacing: -0.01em;
  font-family: "Inter", sans-serif;
  padding: 0.4rem 0;
  font-size: 1.1rem;
}

.nav a {
  color: var(--muted);
  text-decoration: none;
  padding: 0.35rem 0.55rem;
  margin-left: 0.25rem;
  font-size: 0.9rem;
  font-family: "Inter", sans-serif;
  border-radius: 4px;
  transition: color 0.2s ease, background 0.2s ease;
}

.nav a:hover {
  color: var(--text);
  background: rgba(29, 35, 42, 0.06);
}

/* Layout */
.container {
  max-width: 1040px;
  margin: 0 auto;
  padding: 4rem 1.25rem 5rem;
}

section + section {
  margin-top: 5rem;
}

h2 {
  color: #8a8a8a;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  margin-bottom: 2rem;
}

h3 {
  font-size: 1.35rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
}

/* Design variations */
.design-gallery {
  display: grid;
  gap: 1.75rem;
}

.design-option {
  display: grid;
  gap: 1.25rem;
  padding: 1.75rem;
  border: 1px solid var(--hairline);
  border-radius: 18px;
  background: var(--surface);
}

.design-preview {
  display: grid;
  gap: 0.75rem;
  padding: 1.25rem;
  border-radius: 12px;
  border: 1px solid rgba(29, 35, 42, 0.08);
  background: linear-gradient(135deg, rgba(29, 35, 42, 0.1), rgba(29, 35, 42, 0.02));
  min-height: 180px;
}

.design-preview .block {
  display: block;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8px;
  box-shadow: 0 4px 12px rgba(29, 35, 42, 0.04);
}

.design-preview .block--hero {
  min-height: 100%;
}

.design-preview--split {
  grid-template-columns: 1.2fr 0.8fr;
  align-items: start;
}

.design-preview--split .block--hero {
  grid-column: 1;
  grid-row: 1 / span 3;
}

.design-preview--split .block--stacked {
  height: 52px;
  grid-column: 2;
}

.design-preview--split .block--stacked:last-child {
  opacity: 0.55;
}

.design-preview--stagger {
  grid-template-rows: repeat(3, 1fr);
}

.design-preview--stagger .block--band {
  height: 48px;
  position: relative;
  overflow: hidden;
}

.design-preview--stagger .block--band::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: inherit;
  background: linear-gradient(90deg, rgba(29, 35, 42, 0.14), transparent 60%);
  opacity: 0.5;
}

.design-preview--stagger .block--band:nth-child(2) {
  width: 80%;
  margin-left: auto;
}

.design-preview--stagger .block--band:nth-child(3) {
  width: 88%;
}

.design-preview--pillars {
  grid-template-rows: auto 1fr;
}

.design-preview .block--intro {
  height: 60px;
}

.pillar-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0.75rem;
}

.pillar-row .block--pillar {
  height: 72px;
}

.pillar-row .block--pillar:nth-child(2) {
  opacity: 0.75;
}

.pillar-row .block--pillar:nth-child(3) {
  opacity: 0.55;
}

.design-preview--immersive {
  position: relative;
  grid-template-rows: repeat(3, auto);
}

.design-preview--immersive .block--canvas {
  height: 120px;
  background: linear-gradient(120deg, rgba(29, 35, 42, 0.2), rgba(29, 35, 42, 0.05));
}

.design-preview--immersive .block--callout {
  height: 46px;
  width: 70%;
  margin-left: auto;
}

.design-preview--immersive .block--callout:first-of-type {
  margin-top: -1.75rem;
  margin-left: 0;
  width: 64%;
}

.design-copy p {
  margin: 0;
}

/* Hero */
.hero {
  background: var(--surface);
  border-radius: 16px;
  padding: 2.5rem 2.5rem 2.75rem;
  border: 1px solid var(--hairline);
}

.hero-grid {
  display: grid;
  gap: 2rem;
}

.eyebrow {
  font-family: "Inter", sans-serif;
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.22em;
  color: #8a8a8a;
  margin-bottom: 1rem;
}

.hero h1 {
  font-size: clamp(2rem, 4vw, 2.75rem);
  font-weight: 600;
  margin-bottom: 1rem;
}

.subtitle {
  font-size: 1.05rem;
  color: var(--muted);
  margin-bottom: 2rem;
  max-width: 60ch;
}

.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.7rem 1.35rem;
  border-radius: 999px;
  background: var(--accent);
  color: var(--surface);
  text-decoration: none;
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  font-weight: 600;
  letter-spacing: 0.01em;
  transition: background 0.2s ease, color 0.2s ease;
}

.cta-button:hover {
  background: rgba(29, 35, 42, 0.85);
}

.link-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.7rem 1.35rem;
  border-radius: 999px;
  border: 1px solid var(--hairline);
  background: transparent;
  color: var(--text);
  text-decoration: none;
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  transition: background 0.2s ease, border-color 0.2s ease;
}

.link-button:hover {
  background: rgba(29, 35, 42, 0.05);
  border-color: rgba(29, 35, 42, 0.3);
}

.hero-meta {
  display: grid;
  gap: 1.25rem;
}

/* Landing variations */
.variations-body {
  background: linear-gradient(180deg, #f4f5f7 0%, #f0f2f5 40%, #eef1f4 100%);
}

.variations {
  padding-top: 6rem;
  padding-bottom: 6rem;
}

.variations-intro {
  max-width: 720px;
  margin-bottom: 4rem;
}

.variations-intro h1 {
  font-size: clamp(2.25rem, 5vw, 3rem);
  margin-bottom: 1.25rem;
}

.variations-grid {
  display: grid;
  gap: 3rem;
}

.variation-card {
  display: grid;
  gap: 2.5rem;
  background: rgba(255, 255, 255, 0.92);
  border: 1px solid rgba(226, 230, 235, 0.9);
  border-radius: 20px;
  padding: 2.75rem;
  box-shadow: 0 28px 60px -40px rgba(15, 23, 42, 0.4);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.variation-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 32px 70px -42px rgba(15, 23, 42, 0.45);
}

.variation-card ul {
  margin-top: 1.25rem;
  display: grid;
  gap: 0.65rem;
  padding-left: 1.25rem;
  color: var(--muted);
}

.variation-copy h2 {
  font-size: clamp(1.75rem, 3.6vw, 2.35rem);
  color: var(--text);
  margin-bottom: 1rem;
}

.variation-label {
  text-transform: uppercase;
  font-family: "Inter", sans-serif;
  font-size: 0.8rem;
  letter-spacing: 0.26em;
  color: #8c939c;
  margin-bottom: 0.85rem;
}

.variation-preview {
  border-radius: 18px;
  padding: 2.25rem;
  border: 1px solid rgba(226, 230, 235, 0.8);
}

.hero-mock {
  display: grid;
  gap: 1.5rem;
  font-family: "Inter", sans-serif;
  color: inherit;
}

.hero-mock__text {
  display: grid;
  gap: 1.1rem;
}

.hero-mock__chip {
  display: inline-flex;
  align-self: flex-start;
  padding: 0.35rem 0.85rem;
  border-radius: 999px;
  font-size: 0.68rem;
  text-transform: uppercase;
  letter-spacing: 0.24em;
}

.hero-mock h3 {
  font-size: 1.75rem;
  margin: 0;
}

.hero-mock p {
  font-family: "Charter", ui-serif, Georgia, "Times New Roman", serif;
  font-size: 0.95rem;
  line-height: 1.6;
  max-width: 40ch;
}

.hero-mock__buttons {
  display: flex;
  gap: 0.75rem;
}

.hero-mock__button {
  display: inline-flex;
  width: 110px;
  height: 40px;
  border-radius: 999px;
}

.hero-mock__button--solid {
  background: #1d232a;
}

.hero-mock__button--ghost {
  border: 1px solid currentColor;
}

.hero-mock__meta {
  display: grid;
  gap: 0.85rem;
}

.hero-mock__meta-card {
  background: rgba(255, 255, 255, 0.75);
  border-radius: 12px;
  height: 52px;
}

.variation-card--balanced .variation-preview {
  background: linear-gradient(145deg, #ffffff 0%, #f8f9fb 100%);
  color: #1d232a;
}

.variation-card--balanced .hero-mock__chip {
  background: rgba(237, 222, 208, 0.6);
  color: #5e4228;
}

.variation-card--balanced .hero-mock__button--solid {
  background: #1d232a;
}

.variation-card--balanced .hero-mock__button--ghost {
  border-color: rgba(29, 35, 42, 0.25);
}

.variation-card--balanced .hero-mock__meta-card {
  border: 1px solid rgba(226, 230, 235, 0.8);
  background: rgba(255, 255, 255, 0.85);
}

.variation-card--dark .variation-preview {
  background: radial-gradient(circle at 20% 20%, rgba(116, 130, 255, 0.25), transparent 65%),
    linear-gradient(160deg, #141824 0%, #0d111c 100%);
  color: rgba(255, 255, 255, 0.88);
  border: 1px solid rgba(76, 91, 143, 0.5);
}

.variation-card--dark .hero-mock__chip {
  background: rgba(116, 130, 255, 0.25);
  color: rgba(216, 223, 255, 0.9);
}

.variation-card--dark .hero-mock h3 {
  font-size: 1.85rem;
}

.variation-card--dark .hero-mock__button--solid {
  background: linear-gradient(130deg, #6a7fff, #95a4ff);
}

.variation-card--dark .hero-mock__button--ghost {
  border-color: rgba(216, 223, 255, 0.5);
}

.variation-card--dark .hero-mock__meta-card {
  background: rgba(21, 27, 43, 0.75);
  border: 1px solid rgba(116, 130, 255, 0.25);
}

.variation-card--centered .variation-preview {
  background: linear-gradient(180deg, #ffffff 0%, #f6f7fb 100%);
  display: grid;
  justify-items: center;
  text-align: center;
  color: #243042;
}

.variation-card--centered .hero-mock {
  width: min(100%, 520px);
}

.variation-card--centered .hero-mock__text {
  justify-items: center;
}

.variation-card--centered .hero-mock__chip {
  background: rgba(200, 220, 255, 0.7);
  color: #2c4a7a;
}

.hero-mock__meta--bar {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 0.75rem;
  width: 100%;
}

.hero-mock__meta-pill {
  height: 44px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.7);
  border: 1px solid rgba(195, 205, 220, 0.8);
}

.variation-card--minimal .variation-preview {
  background: linear-gradient(140deg, #ffffff 0%, #f5f4f2 100%);
  border: 1px solid rgba(210, 205, 195, 0.9);
  color: #2c2620;
  font-family: "Charter", ui-serif, Georgia, "Times New Roman", serif;
}

.variation-card--minimal .hero-mock h3 {
  font-family: "Playfair Display", "Times New Roman", serif;
  font-size: 2rem;
  letter-spacing: -0.02em;
}

.variation-card--minimal .hero-mock__chip {
  background: transparent;
  border: 1px solid rgba(88, 76, 58, 0.35);
  color: rgba(88, 76, 58, 0.8);
}

.hero-mock__buttons--links {
  display: flex;
  gap: 1.5rem;
}

.hero-mock__link {
  width: 90px;
  height: 16px;
  border-bottom: 1px solid currentColor;
}

.hero-mock__meta--list {
  display: grid;
  gap: 0.65rem;
}

.hero-mock__meta-line {
  height: 14px;
  border-bottom: 1px solid rgba(88, 76, 58, 0.35);
}

@media (min-width: 960px) {
  .variation-card {
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }
}

@media (max-width: 720px) {
  .variation-card {
    padding: 2.25rem;
  }

  .variation-preview {
    padding: 1.75rem;
  }
}

.meta-block {
  background: var(--surface);
  border: 1px solid var(--hairline);
  border-radius: 12px;
  padding: 1.2rem 1.5rem;
}

.meta-label {
  display: block;
  font-family: "Inter", sans-serif;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.18em;
  color: #8a8a8a;
  margin-bottom: 0.75rem;
}

/* Focus cards */
.card-grid {
  display: grid;
  gap: 1.5rem;
}

.card {
  background: var(--surface);
  border: 1px solid var(--hairline);
  border-radius: 14px;
  padding: 1.7rem 1.9rem;
}

.card p {
  margin: 0;
}

/* Work */
.work {
  display: grid;
  gap: 2.25rem;
}

.case-study {
  display: grid;
  gap: 1.75rem;
  background: var(--surface);
  border: 1px solid var(--hairline);
  border-radius: 16px;
  padding: 1.85rem;
}

.case-body p {
  margin-bottom: 1.25rem;
}

.case-tag {
  display: inline-flex;
  align-items: center;
  font-family: "Inter", sans-serif;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.18em;
  color: #8a8a8a;
  margin-bottom: 1rem;
}

.case-points {
  list-style: none;
  color: var(--muted);
  margin-bottom: 1.5rem;
  display: grid;
  gap: 0.5rem;
  padding-left: 0;
}

.case-points li::before {
  content: "—";
  margin-right: 0.5rem;
  color: var(--text);
}

.case-links {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.case-links a {
  font-family: "Inter", sans-serif;
  font-size: 0.9rem;
  color: var(--text);
  text-decoration: none;
  border-bottom: 1px solid rgba(29, 35, 42, 0.25);
  padding-bottom: 0.1rem;
  transition: border-color 0.2s ease, color 0.2s ease;
}

.case-links a::after {
  content: " →";
}

.case-links a:hover {
  border-color: var(--text);
}

.case-media {
  position: relative;
}

.case-preview {
  width: 100%;
  aspect-ratio: 16 / 10;
  border: 1px solid var(--hairline);
  border-radius: 12px;
  background: #f8f9fb;
}

.preview-figma {
  background-image:
    linear-gradient(0deg, rgba(0, 0, 0, 0.04) 0 0),
    linear-gradient(#eaeaea 1px, transparent 1px);
  background-size: 100% 28px, 100% 14px;
  background-position: 0 0, 0 36px;
}

.preview-wiki {
  background-image:
    linear-gradient(#eaeaea 40px, transparent 40px),
    linear-gradient(#eaeaea 1px, transparent 1px);
  background-size: 100% 60px, 100% 16px;
}

.preview-goals {
  background-image:
    radial-gradient(circle at 16px 22px, #cfcfcf 8px, transparent 9px),
    linear-gradient(#eaeaea 1px, transparent 1px);
  background-size: 100% 44px, 100% 44px;
}

/* Approach */
.approach {
  display: grid;
  gap: 2.5rem;
}

.approach-grid {
  display: grid;
  gap: 1.5rem;
}

.approach-card {
  background: var(--surface);
  border: 1px solid var(--hairline);
  border-radius: 14px;
  padding: 1.65rem 1.85rem;
}

.approach-card p {
  margin: 0;
}

.toolkit {
  display: grid;
  gap: 1rem;
}

.toolkit h3 {
  font-size: 1rem;
  font-family: "Inter", sans-serif;
  font-weight: 600;
  text-transform: none;
  letter-spacing: -0.01em;
  color: var(--text);
  margin-bottom: 0;
}

.tech-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 0.6rem 1.25rem;
  color: var(--muted);
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
}

/* Contact */
.contact {
  background: var(--surface);
  border: 1px solid var(--hairline);
  border-radius: 16px;
  padding: 2.35rem 2.6rem;
  text-align: left;
}

.contact p {
  margin-bottom: 2rem;
}

.contact-links {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.contact-links a {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.7rem 1.4rem;
  border-radius: 999px;
  border: 1px solid var(--hairline);
  text-decoration: none;
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  color: var(--text);
  transition: background 0.2s ease, border-color 0.2s ease;
}

.contact-links a:hover {
  background: rgba(29, 35, 42, 0.05);
  border-color: rgba(29, 35, 42, 0.3);
}

/* Footer */
.site-footer {
  border-top: 1px solid var(--hairline);
  padding: 2rem 1.25rem 2.5rem;
  text-align: center;
  color: var(--muted);
  font-size: 0.9rem;
}

.footer-inner {
  max-width: 1040px;
  margin: 0 auto;
}

/* Responsive */
@media (min-width: 640px) {
  .hero-grid {
    grid-template-columns: 1.2fr 1fr;
  }

  .card-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .approach-grid {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
}

@media (min-width: 768px) {
  .case-study {
    grid-template-columns: 1.25fr 1fr;
    align-items: center;
  }
}

@media (max-width: 639px) {
  .hero {
    padding: 2rem 1.75rem;
  }

  .card,
  .approach-card,
  .case-study,
  .contact {
    padding: 1.75rem 1.5rem;
  }
}

/* Work Section Styles */
.work-header {
  display: flex;
  align-items: baseline;
  gap: 1rem;
  margin-bottom: 2.5rem;
}

.work-header h2 {
  margin: 0;
}

.work-period {
  font-size: 0.9rem;
  color: #64748b;
  font-weight: 400;
  opacity: 0.8;
}

.timeline {
  display: grid;
  gap: 1.75rem;
  margin: 0 0 3.5rem 0;
  padding-left: 1rem;
  border-left: 2px solid #e2e8f0;
  position: relative;
}

.timeline-item {
  position: relative;
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 2rem;
  align-items: start;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -1.75rem;
  top: 0.5rem;
  width: 12px;
  height: 12px;
  background: #3b82f6;
  border-radius: 50%;
  border: 3px solid #ffffff;
  box-shadow: 0 0 0 1px #e2e8f0;
}

.timeline-period {
  font-size: 0.8rem;
  font-weight: 500;
  color: #64748b;
  background: #f8fafc;
  padding: 0.4rem 0.6rem;
  border-radius: 6px;
  text-align: center;
  border: 1px solid #e2e8f0;
  white-space: nowrap;
}

.timeline-content h3 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #1e293b;
  margin: 0 0 0.5rem 0;
}

.timeline-content p {
  font-size: 0.95rem;
  color: #64748b;
  line-height: 1.5;
  margin: 0;
}

/* Hover effects */
.timeline-item:hover .timeline-period {
  background: #f1f5f9;
  border-color: #cbd5e1;
  transition: all 0.2s ease;
}

.timeline-item:hover::before {
  background: #2563eb;
  transform: scale(1.1);
  transition: all 0.2s ease;
}


@media (max-width: 768px) {
  .timeline-item {
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  .timeline-period {
    justify-self: start;
    font-size: 0.8rem;
    padding: 0.4rem 0.6rem;
  }

  .gallery-grid {
    grid-template-columns: 1fr;
  }

  .timeline-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .expand-indicator {
    margin-left: 0;
  }
}

/* Blog Post Styles */
.post-hero {
  padding: 2rem 0 3rem;
  margin-bottom: 3rem;
  text-align: left;
}

.post-hero h1 {
  font-size: clamp(2.25rem, 5vw, 3rem);
  font-weight: 700;
  margin-bottom: 0.75rem;
  color: var(--text);
  line-height: 1.1;
}

.post-date {
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  color: var(--muted);
  margin-bottom: 2rem;
}

.post-content {
  max-width: 70ch;
  margin: 0 auto;
  font-size: 1.125rem;
  line-height: 1.8;
  color: var(--text);
}

.post-content p {
  margin-bottom: 1.75rem;
  color: var(--text);
  max-width: none;
  line-height: 1.8;
}

.post-content h2 {
  font-size: 1.75rem;
  font-weight: 700;
  margin: 3rem 0 1.5rem 0;
  color: var(--text);
  text-transform: none;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.post-content h3 {
  font-size: 1.375rem;
  font-weight: 600;
  margin: 2.5rem 0 1.25rem 0;
  color: var(--text);
  line-height: 1.3;
}

.post-content blockquote {
  border-left: 3px solid var(--accent);
  margin: 2rem 0;
  padding: 0 0 0 1.5rem;
  font-style: italic;
  color: var(--muted);
  line-height: 1.7;
  font-size: 1.05em;
}

.post-content blockquote p {
  margin-bottom: 0;
}

.post-content code {
  background: rgba(29, 35, 42, 0.08);
  padding: 0.2rem 0.5rem;
  border-radius: 3px;
  font-family: "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", monospace;
  font-size: 0.9em;
  color: var(--accent);
}

.post-content pre {
  background: rgba(29, 35, 42, 0.04);
  border: 1px solid var(--hairline);
  border-radius: 6px;
  padding: 1.25rem;
  margin: 2.5rem 0;
  overflow-x: auto;
  font-family: "SF Mono", "Monaco", "Inconsolata", "Roboto Mono", monospace;
  font-size: 0.9rem;
  line-height: 1.6;
}

.post-content ul, .post-content ol {
  margin: 1.5rem 0;
  padding-left: 1.5rem;
}

.post-content li {
  margin-bottom: 0.75rem;
  color: var(--text);
  line-height: 1.7;
}

.back-link {
  display: inline-flex;
  align-items: center;
  margin-top: 4rem;
  padding: 0.75rem 0;
  text-decoration: none;
  color: var(--accent);
  font-family: "Inter", sans-serif;
  font-size: 0.95rem;
  font-weight: 500;
  transition: color 0.2s ease;
  border-bottom: 1px solid transparent;
}

.back-link:hover {
  color: var(--text);
  border-bottom-color: var(--accent);
}

/* Posts List Styles */
.posts-list {
  max-width: 720px;
  margin: 0 auto;
  padding-top: 2rem;
}

.post-item {
  padding: 1.5rem 0;
  border-bottom: 1px solid var(--hairline);
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 1rem;
}

.post-item:first-child {
  padding-top: 0;
}

.post-item:last-child {
  border-bottom: none;
}

.post-item h3 {
  margin: 0;
  font-size: 1.25rem;
  font-weight: 600;
  flex: 1;
}

.post-item h3 a {
  color: var(--text);
  text-decoration: none;
  transition: color 0.2s ease;
}

.post-item h3 a:hover {
  color: var(--accent);
}

.post-item .post-date {
  flex-shrink: 0;
  font-size: 0.85rem;
}

@media (max-width: 640px) {
  .post-hero {
    padding: 1.5rem 0 2.5rem;
    text-align: left;
  }
  
  .post-content {
    font-size: 1.0625rem;
    padding: 0 1rem;
    line-height: 1.75;
    max-width: none;
  }
  
  .post-content h2 {
    font-size: 1.5rem;
    margin: 2.5rem 0 1.25rem 0;
  }
  
  .post-content h3 {
    font-size: 1.25rem;
    margin: 2rem 0 1rem 0;
  }
  
  .post-content p {
    margin-bottom: 1.5rem;
  }
  
  .post-content ul, .post-content ol {
    padding-left: 1.25rem;
    margin: 1.25rem 0;
  }
  
  .post-content li {
    margin-bottom: 0.625rem;
  }
  
  .post-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .post-item .post-date {
    font-size: 0.8rem;
  }
}
